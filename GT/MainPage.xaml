<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GT.MainPage"
             Title="GT7 Data Tools"
             BackgroundColor="White"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center" WidthRequest="260">

            <Label Text="IP Address" SemanticProperties.HeadingLevel="Level2"  />
            <Entry x:Name="tbIp" />

            <Button
                x:Name="CounterBtn"
                Text="Get data"
                Clicked="OnClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>